<header>
  <h1>Books</h1>
</header>

<main>
  <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_book_path(book.id) %></td>
         <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>
  <% if @book.errors.any? %>
   <div id = "errors_explanation" class = "alert alert-danger">
       <ul>
           <% @book.errorsfull_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
       </ul>
   </div>
  <% end %> 
   
  <%= form_with model:@book, local:true do |f| %>
   <h4>Title</h4>
   <div class = "field"><%= f.text_field :title %></div>
   <h4>Body</h4>
   <div class = "field"><%= f.text_area :body %></div>
   
   <div class = "actions"><%= f.submit "create Book" %></div>
  
  <% end %>
</main>

