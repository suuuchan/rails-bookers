<header>
  <h1 class = "headline">Books</h1>
</header>

<main>
  <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id) %></td>
         <td><%= link_to "Edit", edit_book_path(book.id) %></td>
         <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>
  <div class="error_explanation">
    <h3><% if @book.errors.any? %><%= pluralize(@book.errors.count, "error") %> prohibited this teacher from being saved:</h3>
   <div class = "alert alert-danger">
     <ul><% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %></ul>
   </div>
  <% end %>

  <%= form_with model:@book, local:true do |f| %>
   <div class = "field"><h4>Title</h4><%= f.text_field :title %></div>
   <div class = "field"><h4>Body</h4><%= f.text_area :body %></div>
   <div class = "actions"><%= f.submit "Create Book" %></div>
  <% end %>
</main>



